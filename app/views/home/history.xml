<Alloy>
    <Window id="win" navBarHidden="true">
        <View id="container">
			<View id="headerView">
            	<Label id="closeLabel" class="messages"/>
				<Label id="clearLabel" class="messages"/>
			</View>
            <ListView id="listView" defaultItemTemplate="template">
                <Templates>
                    <ItemTemplate name="template">
                        <View id="bindContainer">
                            <ImageView bindId="bindItemPicture" id="imageRow" />
                            <Label bindId="bindItemTimestamp" id="timestampRow" />
                            <Label bindId="bindItemSize" id="sizeRow" />
                            <ImageView bindId="bindItemStatus" id="statusRow" />
                            <Label bindId="bindItemUrl" id="urlRow" />
                        </View>
                    </ItemTemplate>
                </Templates>
            </ListView>
        </View>
    </Window>
</Alloy>